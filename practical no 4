# Memory Allocation Strategies in Python
# Strategies: First Fit, Best Fit, Worst Fit, Next Fit

def print_allocation(allocation, processes):
    print("\nProcess No.\tProcess Size\tBlock No.")
    for i in range(len(processes)):
        if allocation[i] != -1:
            print(f"{i + 1}\t\t{processes[i]}\t\t{allocation[i] + 1}")
        else:
            print(f"{i + 1}\t\t{processes[i]}\t\tNot Allocated")


def first_fit(blocks, processes):
    print("\n---- FIRST FIT ----")
    allocation = [-1] * len(processes)
    for i in range(len(processes)):
        for j in range(len(blocks)):
            if blocks[j] >= processes[i]:
                allocation[i] = j
                blocks[j] -= processes[i]
                break
    print_allocation(allocation, processes)


def best_fit(blocks, processes):
    print("\n---- BEST FIT ----")
    allocation = [-1] * len(processes)
    for i in range(len(processes)):
        best_index = -1
        for j in range(len(blocks)):
            if blocks[j] >= processes[i]:
                if best_index == -1 or blocks[j] < blocks[best_index]:
                    best_index = j
        if best_index != -1:
            allocation[i] = best_index
            blocks[best_index] -= processes[i]
    print_allocation(allocation, processes)


def worst_fit(blocks, processes):
    print("\n---- WORST FIT ----")
    allocation = [-1] * len(processes)
    for i in range(len(processes)):
        worst_index = -1
        for j in range(len(blocks)):
            if blocks[j] >= processes[i]:
                if worst_index == -1 or blocks[j] > blocks[worst_index]:
                    worst_index = j
        if worst_index != -1:
            allocation[i] = worst_index
            blocks[worst_index] -= processes[i]
    print_allocation(allocation, processes)


def next_fit(blocks, processes):
    print("\n---- NEXT FIT ----")
    allocation = [-1] * len(processes)
    j = 0  # start position
    for i in range(len(processes)):
        count = 0
        while count < len(blocks):
            if blocks[j] >= processes[i]:
                allocation[i] = j
                blocks[j] -= processes[i]
                break
            j = (j + 1) % len(blocks)
            count += 1
    print_allocation(allocation, processes)


# Input Data
memory_blocks = [100, 500, 200, 300, 600]
processes = [212, 417, 112, 426]

# Run all strategies separately (copy blocks list to avoid interference)
first_fit(memory_blocks.copy(), processes)
best_fit(memory_blocks.copy(), processes)
worst_fit(memory_blocks.copy(), processes)
next_fit(memory_blocks.copy(), processes)
